<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.pipapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MoviesApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/img_video_player"
        android:label="@string/app_name"
        android:roundIcon="@drawable/img_video_player"
        android:supportsRtl="true"
        android:theme="@style/Theme.PIPApplication"
        tools:targetApi="31">
        <activity
            android:name=".ui.activity.SplashActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

<!--        android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"-->
        <activity
            android:name=".ui.activity.MainActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="adjustPan"/>

        <activity
            android:name=".ui.activity.LoginActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden"/>


        <activity android:name=".ui.activity.RegisterActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden"/>


        <activity android:name=".ui.activity.MovieDetailsActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

        <activity android:name=".ui.activity.FavMovieDetailsActivity"
            android:exported="false"
            android:configChanges="orientation|screenSize|keyboardHidden"/>

    </application>

</manifest>