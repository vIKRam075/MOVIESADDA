<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movies"
            type="com.example.pipapplication.data.model.MoviesResponse" />
    </data>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:elevation="4dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardImg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                app:layout_constraintDimensionRatio="16:17"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgMovie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    app:image="@{movies.image}"
                    android:src="@drawable/img_video_player" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:layout_marginBottom="8dp"
                android:maxLines="3"
                android:text="@{movies.name}"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/cardImg"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/cardImg"
                app:layout_constraintTop_toBottomOf="@id/ratings"
                tools:text="Avengers" />

            <TextView
                android:id="@+id/txtGenre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@{movies.genre.get(0)}"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Action"
                android:paddingStart="6dp"
                android:paddingBottom="2dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                app:layout_constraintStart_toStartOf="@id/cardImg"
                android:background="@drawable/txt_bg"
                app:layout_constraintTop_toTopOf="@id/cardImg" />

            <TextView
                android:id="@+id/ratings"
                tools:text="8.6"
                android:drawablePadding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:text="@{movies.aggregateRating.ratingValue.toString()}"
                app:layout_constraintEnd_toEndOf="@id/cardImg"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="@id/cardImg"
                app:layout_constraintTop_toBottomOf="@id/cardImg"
                app:drawableEndCompat="@drawable/star" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>